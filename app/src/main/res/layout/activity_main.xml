<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="205dp"
        android:text="Weiter" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/editTextNumberRows"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:text="Zeilen:" />

    <EditText
        android:id="@+id/editTextNumberRows"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        android:layout_toStartOf="@+id/textViewX"
        android:inputType="number"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/editTextNumberCols"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:text="Spalten:" />

    <EditText
        android:id="@+id/editTextNumberCols"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/textViewX"
        android:inputType="number"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="384dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Ich löse für dich das LGS mit Hilfe von dem Gauß-Jordan Algorithmus!" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="Größe der Matrix:" />

    <TextView
        android:id="@+id/textViewX"
        android:layout_width="23dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="X"
        android:textSize="32dp" />
</RelativeLayout>